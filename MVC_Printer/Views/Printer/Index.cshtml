@* filepath: MVC_Printer/Views/Printer/Index.cshtml *@
@{
    ViewData["Title"] = "Printer Management";
}

<h1>Printer Management</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h4>Check Balance & Pages</h4>
        <form asp-action="GetQuota" method="post">
            <div class="form-group">
                <label for="userId" class="control-label">User ID</label>
                <input type="text" class="form-control" id="userId" name="userId" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Get Quota" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h4>Add Money</h4>
        <p>Add money to your printing account.</p>
        <a asp-action="AddMoney" class="btn btn-success">Add Money</a>
    </div>
</div>