@* filepath: MVC_Printer/Views/Printer/AddMoney.cshtml *@
@model MVC_Printer.Models.AddMoneyViewModel

@{
    ViewData["Title"] = "Add Money";
}

<h1>Add Money</h1>

<h4>AddMoneyViewModel</h4>
